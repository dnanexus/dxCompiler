{
    "id": "#main",
    "class": "CommandLineTool",
    "baseCommand": [
        "/bin/echo"
    ],
    "stdout": "hello.txt",
    "requirements": [
        {
            "class": "DockerRequirement",
            "dockerPull": "ubuntu:latest"
        }
    ],
    "inputs": [
        {
            "type": {
                "type": "array",
                "items": "string"
            },
            "inputBinding": {
                "prefix": "--bonus"
            },
            "id": "#main/bonus"
        }
    ],
    "hints": [
        {
            "loadListing": "deep_listing",
            "class": "LoadListingRequirement"
        },
        {
            "networkAccess": true,
            "class": "NetworkAccess"
        }
    ],
    "outputs": [
        {
            "type": "string",
            "outputBinding": {
                "glob": "hello.txt",
                "loadContents": true,
                "outputEval": "$(self[0].contents)"
            },
            "id": "#main/out"
        }
    ],
    "cwlVersion": "v1.2"
}