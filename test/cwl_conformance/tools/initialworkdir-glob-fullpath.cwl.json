{
  "arguments": [
    {
      "position": 0,
      "valueFrom": "$(inputs.INPUT.basename).fai"
    }
  ],
  "baseCommand": [
    "touch"
  ],
  "class": "CommandLineTool",
  "cwlVersion": "v1.2",
  "id": "initialworkdir-glob-fullpath.cwl",
  "inputs": [
    {
      "id": "INPUT",
      "type": "File"
    }
  ],
  "outputs": [
    {
      "id": "OUTPUT",
      "outputBinding": {
        "glob": "$(runtime.outdir)/$(inputs.INPUT.basename)"
      },
      "secondaryFiles": [
        ".fai"
      ],
      "type": "File"
    }
  ],
  "requirements": [
    {
      "class": "InitialWorkDirRequirement",
      "listing": [
        "$(inputs.INPUT)"
      ]
    },
    {
      "class": "InlineJavascriptRequirement"
    }
  ]
}
