{
  "arguments": [
    "$(runtime.cores)"
  ],
  "baseCommand": "echo",
  "class": "CommandLineTool",
  "cwlVersion": "v1.2",
  "id": "#main",
  "inputs": [
    {
      "id": "#main/special_file",
      "type": "File"
    }
  ],
  "outputs": [
    {
      "id": "#main/output",
      "outputBinding": {
        "glob": "cores.txt"
      },
      "type": "File"
    }
  ],
  "requirements": [
    {
      "class": "ResourceRequirement",
      "coresMax": "$(inputs.special_file.size)",
      "coresMin": "$(inputs.special_file.size)"
    }
  ],
  "stdout": "cores.txt"
}
